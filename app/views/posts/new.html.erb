<% if current_user %>

  <div id="comment_form" class="contentblock">
    
    <p>
      <%= link_to gravatar(current_user, {:size => 40}, {:class => 'gravatar'}), url_for(current_user) %>
      You are logged in as <%= link_to current_user.name, url_for(current_user) %>.<br />
      If that's not you, please <a href="#">log out</a>.
    </p>
    
    <% form_for :post, :url  => page_posts_url(@page), :html => {:id => 'comment_form', :class => 'friendly'} do |f| -%>
    <%= render :partial => 'form', :locals => {:f => f} %>
    <%= submit_tag "Post comment" %>
    <% end -%>
  </div>

<% else %>

  <div id="login_form" class="contentblock">
    <h3>to comment, please log in</h3>

    <p>If you haven't already, you will need to <%= link_to "register", user_register_url %> first. It only takes a moment.</p>

    <% form_for :user, :url => user_login_url, :html => {:class => 'friendly'} do |f| %>
      <p>
        <label for="user_login">Username</label><br />
        <%= f.text_field "login", :class => 'standard' %>
      </p>
      <p>
        <label for="user_login">Password</label><br />
        <%= f.password_field "password", :class => 'standard' %>
      </p>
      <p>
        <%= hidden_field_tag "backto", request.referer %>
        <%= submit_tag "Log in" %> <%= check_box_tag "remember_me" %> <label for="remember_me">Remember me</label> don't tick this box if you share this computer
      </p>
    <% end %>
  </div>

<% end %>