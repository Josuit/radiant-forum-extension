= render :partial => 'readers/flasher'

#forum
  %h1
    = link_to "#{@topic.forum.name} &raquo;", forum_url(@topic.forum), {:class => 'breadhead'}
    %br
    = @topic.name
    = feed_link(formatted_topic_path(@topic.forum, @topic, :rss))

  = render :partial => 'posts/list', :locals => {:with_context => false}
  - if @posts.next_page
    = render :partial => 'pagination'
  - else 
    - if current_reader
      = render :partial => 'post_reply'
    - else
      = render :partial => 'login_form'

= render :partial => 'readers/controls'

- content_for :breadcrumbs do
  = link_to 'Forum', forums_url
  \&gt;
  = link_to @forum.name, forum_url(@forum) 
  \&gt;
  = @topic.name

- content_for :title do
  = @topic.name
  